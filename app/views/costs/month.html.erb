<div class="img4">
<div class='text-center pb-4'>
  <h1>月別支出</h1>
</div>
<div class="row">
  <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 offset-1 col-10">
    <% @month_costs.each do |key, value| %>
      <div>
        <table height="10" align="center">
          <tr>
            <td width="100" class="text-left border-bottom "><%= key.first %>年</td>
            <td width="350" class="text-left border-bottom"><%= key.last %>月</td>
            <td width="250" class="text-danger text-end border-bottom"><%= value %>ゼニ</td>
          </tr>
        </table>
      </div>
    <% end %>
    <% if @month_costs.count >= 12 %>
    <div><%== pagy_nav(@pagy) %></div>
    <% end %>
  </div>
</div>
</div>

